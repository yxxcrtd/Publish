<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chinaedustar.publish.model">
	<class name="FriendSiteSpecial" table="Ext_FsSpecial">
		<!-- 主键，数据库中字段为 ObjectId, 自动生成。 -->
		<id name="id" column="SpecialId" >
			<generator class="native" />
		</id>
		<!-- 对象的名字。 -->
		<property name="specialName" column="SpecialName" type="string" length="64" />
		<property name="specialDesc" column="SpecialDesc" type="string" />
	</class>
</hibernate-mapping>
